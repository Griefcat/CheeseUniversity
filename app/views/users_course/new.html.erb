<h1>Welcome <%=session[:user_id]%></h1>

<h3>Please fill the form with all your info and choose your course </h3>

<%=form_with url: '/users_course/create' do |f|%>
    <%=f.label :username%>
    <%=f.text_field :username%><br>
    
    
    <%=f.collection_select :user_id, User.all, :id, :username%>
    <%=f.collection_select :course_id, Course.all, :id, :name%><br>
    <%=f.submit "Apply"%>
<%end%>